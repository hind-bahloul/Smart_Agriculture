<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Serre3">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/calligraffitti"
                        android:gravity="center"
                        android:text="Serre NÂ°3"
                        android:textColor="?attr/colorPrimaryDark"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img1"
                            android:layout_width="165dp"
                            android:layout_height="200dp"
                            android:layout_weight="1"
                            app:srcCompat="@mipmap/serrepommedeterre" />

                        <TextView
                            android:id="@+id/txtPom"
                            android:layout_width="50dp"
                            android:layout_height="150dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingTop="50dp"
                            android:text="Serre Pomme de Terre"
                            android:textColor="?attr/colorPrimaryDark"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img2"
                            android:layout_width="263dp"
                            android:layout_height="200dp"
                            app:srcCompat="@mipmap/serre_tomates" />

                        <TextView
                            android:id="@+id/txtSerreTom"
                            android:layout_width="50dp"
                            android:layout_height="150dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingTop="50dp"
                            android:text="Serre Tomates"
                            android:textColor="?attr/colorPrimaryDark"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/txt2"
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img3"
                            android:layout_width="263dp"
                            android:layout_height="200dp"
                            app:srcCompat="@mipmap/serrepepper" />

                        <TextView
                            android:id="@+id/txtSerrePepper"
                            android:layout_width="50dp"
                            android:layout_height="150dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingTop="50dp"
                            android:text="Serre Pepper"
                            android:textColor="?attr/colorPrimaryDark"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>